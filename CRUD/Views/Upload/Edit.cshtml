@model CRUD.Models.Image
@{
    ViewData["Title"] = "Edit";
}

<div class=" container">
    <div class=" row">
        <div class=" col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary"> Edit Employee</h1>
                    <div class=" card-body">
                        <form method="post" asp-action="Edit">
                            <div class=" form-group">
                                <label asp-for="Name"></label>
                                <input type="hidden" asp-for="Id" />
                                <input type="text" asp-for="Name" class="form-control" placeholder="Enter  Name " />
                                <label asp-for="ImagePath" ></label>
                                <input type="file" asp-for="ImagePath" class="form-control"  />

                              
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Edit" class="btn btn-sm btn-outline-success float-right" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

